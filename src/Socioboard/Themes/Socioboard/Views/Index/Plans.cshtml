<div id="SignUpModal" class="modal modal-fixed-footer" style="width: 600px;">
    <form onsubmit="myFunction(); return false;" id="RegistrationForm">
        <div class="modal-content">
            <h4 class="center">Create a <span id="planName">Free</span> account</h4>
            <div class="row">
                <div class="row">
                    <div class="input-field col s12 m12">
                        <div class="center">
                            <a id="fb_account" href="#" onclick="googleLogin();">
                                <img src="~/contents/socioboard/images/gplus_signin_button.png" class="responsive-img" alt="" data-pin-nopin="true">
                            </a><br>
                            <a id="fb_account" href="#" onclick="facebookLogin();">
                                <img src="~/contents/socioboard/images/fb_signin_button.png" class="responsive-img" alt="" data-pin-nopin="true">
                            </a>
                        </div>
                    </div>
                </div>
                <hr class="styleOR">

                <div class="row">
                    <div class="input-field col s12 m12">
                        <select id="AccountType" name="AccountType">
                            <optgroup label="Basic Plans">
                                <option value="0">Basic(Free)</option>
                                <option value="1">Standard</option>
                                <option value="2">Premium</option>
                                <option value="3">Deluxe</option>
                            </optgroup>
                            <optgroup label="Extra Plans">
                                <option value="4">Topaz</option>
                                <option value="5">Ruby</option>
                                <option value="6">Gold</option>
                                <option value="7">Platinum</option>
                            </optgroup>
                        </select>
                        <label>Choose your option</label>
                    </div>
                    <div class="input-field col s12 m12">
                        <select id="PaymentType" name="PaymentType">
                            <optgroup label="PaymentType">
                                <option value="0">paypal</option>
                                <option value="1">payumoney</option>
                            </optgroup>
                        </select>
                        <label>Choose your option</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s6">
                        <input id="FirstName" name="FirstName" type="text" required class="validate" pattern="^[a-zA-Z0-9]+$">
                        <label for="FirstName">First Name</label>
                    </div>
                    <div class="input-field col s6">
                        <input id="LastName" name="LastName" type="text" required class="validate" pattern="^[a-zA-Z0-9]+$">
                        <label for="LastName">Last Name</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <input id="EmailId" name="EmailId" type="email" required class="validate" pattern="^([a-zA-Z0-9_\-\.]+)@@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.)|(([a-zA-Z0-9\-]+\.)+))([a-zA-Z]{2,4}|[0-9]{1,3})(\]?)$">
                        <label for="EmailId" data-error="wrong" data-success="right">Email</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <input id="PhoneNumber" name="PhoneNumber" type="tel" class="validate" maxlength="10" pattern="[0-9]{10}">
                        <label for="PhoneNumber" data-error="PhoneNumber" data-success="right">Mobile</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <input id="Password" name="Password" type="password" title="One Capital letter,One Small letter,One number,One special character and min lenght must be 8" data-rule-minlength="8" required class="validate" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[$&+,:;=?@@#|'<>.^*()%!-_]).{8,}">
                        <label for="Password">Password</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <input id="CnfPassword" name="CnfPassword" type="password" data-rule-minlength="8" required class="validate">
                        <label for="CnfPassword">Confirm Password</label>

                    </div>
                </div>
            </div>
        </div>
