                            success: function (msg) {
                                alertify.set({ delay: 5000 });
                                alertify.error("please submit Payment detail.");
                                window.top.location = msg;
                            },
                            error: function (msg) {

                                return false;
                            }
                        });
                    }
                },
                error: function (msg) {
                    alertify.set({ delay: 5000 });
                    alertify.error(msg.responseText);
                    $('#ImgLoading').hide();
                    $('#submitButton').show();
                    return false;
                }

            });
            $('#ImgLoading').hide();
            $('#submitButton').show();
            return false;
        }


