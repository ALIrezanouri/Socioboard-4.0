                $('#submitButton').show();
                return false;
            }

            $.ajax({

                type: "POST",

                url: "@ViewBag.ApiDomain/api/user/Register",

                data: { "FirstName": firstName, "LastName": lastName, "EmailId": email, "PhoneNumber": Phone, "password": password, "AccountType": accountType, "PaymentType": PaymentType },

                //contentType: "application/json; charset=utf-8",

