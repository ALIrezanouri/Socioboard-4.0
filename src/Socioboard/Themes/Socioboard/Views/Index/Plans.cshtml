                success: function (msg) {
                    console.log(msg);
                    alertify.set({ delay: 5000 });
                    alertify.success("Email verification mail sent successfully.");
                    $('#FirstName').val("");
                    $('#LastName').val("");
                    $('#EmailId').val("");
                    $('#PhoneNumber').val("");
                    $('#Password').val("");
                    $('#CnfPassword').val("")
                    $('#ImgLoading').hide();
                    $('#submitButton').show();
                    // $('#req_skype').val("");
                    if (accountType != "0") {
                        $.ajax({

                            type: "GET",

                            url: "@ViewBag.Domain/Home/PayPalAccount",

